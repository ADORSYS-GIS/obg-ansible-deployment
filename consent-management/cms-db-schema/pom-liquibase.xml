<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.adorsys.psd2</groupId>
    <artifactId>cms-db-schema</artifactId>
    <version>17.3</version>
    <packaging>jar</packaging>

    <properties>
        <propertyFile>liquibase.properties</propertyFile>

        <!-- Replace with the actual versions used in your parent POM -->
        <liquibase-core.version>4.25.1</liquibase-core.version>
        <postgresql.version>42.3.8</postgresql.version>
        <mariadb.version>2.3.0</mariadb.version>
        <ojdbc11.version>23.2.0.0</ojdbc11.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.liquibase</groupId>
                <artifactId>liquibase-maven-plugin</artifactId>
                <version>${liquibase-core.version}</version>
                <configuration>
                    <propertyFile>${propertyFile}</propertyFile>
                    <url>jdbc:postgresql://localhost:5433/consent</url>
                    <username>cms</username>
                    <password>cms</password>
                    <changeLogFile>src/main/resources/master.xml</changeLogFile>
                    <defaultSchemaName>consent</defaultSchemaName>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.postgresql</groupId>
                        <artifactId>postgresql</artifactId>
                        <version>${postgresql.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.mariadb.jdbc</groupId>
                        <artifactId>mariadb-java-client</artifactId>
                        <version>${mariadb.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>com.oracle.database.jdbc</groupId>
                        <artifactId>ojdbc11</artifactId>
                        <version>${ojdbc11.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
</project>
