[Unit]
Description=Open Banking Gateway Service
After=network.target

[Service]
User=obg
ExecStart=/usr/bin/java -Dspring.profiles.active=no-signature-filter -jar /usr/share/java/open-banking-gateway-1.0.2-SNAPSHOT-exec.jar \
  --spring.config.location=classpath:/,file:/opt/obg/config/application.yml
  --spring.liquibase.parameters.adorsys-sandbox-url={{sandbox_url}} \
  --spring.liquibase.parameters.adorsys-sandbox-oauth-server-url={{oauth_server_url}} \
SuccessExitStatus=143
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
